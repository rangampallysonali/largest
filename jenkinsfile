pipeline {
    agent {
        docker {
            image 'maven:3.9.6-eclipse-temurin-17'
        }
    }
    stages {
        stage('Checkout'){
            steps {
                
                git ' https://github.com/rangampallysonali/largest'
               
            }
        }
          stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }
         stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
    }
            
        post {
        always {
            junit '**/target/surefire-reports/*.xml'
             }
        }
    
}
